@using GroceryList.Models;

@{
  Layout = "_Layout";
}

<div class="container-fluid text-center">
  <h1>Grocery Stores List</h1>
  <div class="container">
    @if (@Model.Count == 0)
    {
      <h2>No Stores Found</h2>
      <a class="btn btn-lg btn-primary" href=" /stores/new">Add A Store</a>
    }
    else
    {
      @foreach (Store store in @Model)
      {
        <div class="card row">
          <div class="col">
            <h3>Store ID</h3>
            <h3>Store Name</h3>
          </div>
          <div class="col">
            <h3>@store.Id</h3>
            <h3>@store.Name</h3>
          </div>
          <div class="col">
            <a href="/stores/@store.Id" class="btn btn-lg btn-primary">View Store Details</a>
          </div>
        </div>
      }
    }
  </div>
</div>
